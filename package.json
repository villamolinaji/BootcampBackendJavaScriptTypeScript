    "Santiago Camargo <santi.camargo@lemoncode.net> (https://github.com/crsanti)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://Lemoncode/bootcamp-backend.git"
  },
  "homepage": "https://github.com/Lemoncode/bootcamp-backend#readme",
  "bugs": {
    "url": "https://github.com/Lemoncode/bootcamp-backend/issues"
  },
  "devDependencies": {
    "@types/node": "^14.17.3",
    "nodemon": "^2.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.3.4"
  }
}