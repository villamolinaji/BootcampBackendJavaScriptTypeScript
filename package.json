{
  "name": "02-playground-typescript",
  "version": "1.0.0",
  "description": "Playground to show code snippets via TypeScript",
  "type": "module",
  "scripts": {            
    "start": "nodemon --quiet --watch ./src --ext ts --exec \"cls && node --experimental-specifier-resolution=node --loader=ts-node/esm --no-warnings ./src/index.ts\""
  },
